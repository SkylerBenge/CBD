<!-- /snippets/site-logo.liquid -->

<div class="grid__item large--one-third medium-down--one-half">
  {% if template == 'index' %}
    <h2 class="site-header__logo large--left" itemscope itemtype="http://schema.org/Organization">
  {% else %}
    <div class="h1 site-header__logo large--left" itemscope itemtype="http://schema.org/Organization">
  {% endif %}
  {% if section.settings.logo != blank %}
    <a href="/" itemprop="url" class="site-header__logo-link logo {% if template != 'index' %} otherpagelogo {% endif %} ">
      <img src="{{ section.settings.logo | img_url: '300x' }}" alt="{{ shop.name }}" itemprop="logo">
    </a>
  {% endif %}
  {% if section.settings.show_shop_name %}
    <a class = "logo" href="/" itemprop="url">{{ shop.name }}</a>
  {% endif %}
  {% if template == 'index' %}
    </h2>
  {% else %}
    </div>
  {% endif %}
</div>